      */
    }

     
      
      //filtering false data - RIMUOVERE IN PRODUZIONE
      if(spo2 < 81)
        spo2 = 90;

      if(heartRate > 150)
        heartRate = 120;
      


      String message = "";

      message = "";
      message+="MESSAGE:";
      message+="HR:";
      message+=heartRate;

      message+=":HRvalid:";
      message+=validHeartRate;

      message+=":SPO2:";
      message+=spo2;

      message+=":SPO2Valid:";
      message+=validSPO2;
